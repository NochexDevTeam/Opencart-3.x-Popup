              <input type="text" name="payment_nochex_merchanteur" value="{{ payment_nochex_merchanteur }}" placeholder="{{ entry_merchanteur }}" id="input-merchanteur" class="form-control" />
            </div>
          </div>  	  
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_test }}<span data-toggle="tooltip" title="{{ help_test }}"></label>
            <div class="col-sm-10">
              <label class="radio-inline">
                {% if payment_nochex_test %}
                <input type="radio" name="payment_nochex_test" value="1" checked="checked" />
                {{ text_yes }}
                {% else %}
                <input type="radio" name="payment_nochex_test" value="1" />
                {{ text_yes }}
                {% endif %}
              </label>
              <label class="radio-inline">
                {% if not payment_nochex_test %}
                <input type="radio" name="payment_nochex_test" value="0" checked="checked" />
                {{ text_no }}
                {% else %}
                <input type="radio" name="payment_nochex_test" value="0" />
                {{ text_no }}
                {% endif %}
              </label>
            </div>
          </div>
		  
		  <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_api }} <span data-toggle="tooltip" title="{{ help_api }}"></label>
            <div class="col-sm-10">
