              <input type="text" name="payment_nochex_merchantusd" value="{{ payment_nochex_merchantusd }}" placeholder="{{ entry_merchantusd }}" id="input-merchantusd" class="form-control" />
            </div>
          </div>
		  <div class="form-group">
            <label class="col-sm-2 control-label" for="input-merchanteur">{{ entry_merchanteur }}<span data-toggle="tooltip" title="{{ help_merchantideur }}"></label>
